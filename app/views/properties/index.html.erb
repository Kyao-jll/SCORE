<div>
  <div>
    <h1>
      List of all properties
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new property
    </h2>

    <form action="/insert_property" method="post">
      <div>
        <label for="address1_box">
          Address1
        </label>

        <input type="text" id="address1_box" name="query_address1">
      </div>

      <div>
        <label for="address2_box">
          Address2
        </label>

        <input type="text" id="address2_box" name="query_address2">
      </div>

      <div>
        <label for="lat_box">
          Lat
        </label>

        <input type="text" id="lat_box" name="query_lat">
      </div>

      <div>
        <label for="location_description_box">
          Location description
        </label>

        <textarea id="location_description_box" name="query_location_description" rows="3"></textarea>
      </div>

      <div>
        <label for="lon_box">
          Lon
        </label>

        <input type="text" id="lon_box" name="query_lon">
      </div>

      <div>
        <label for="meta_status_box">
          Meta status
        </label>

        <input type="text" id="meta_status_box" name="query_meta_status">
      </div>

      <div>
        <label for="postcode_box">
          Postcode
        </label>

        <input type="text" id="postcode_box" name="query_postcode">
      </div>

      <div>
        <label for="prop_name_box">
          Prop name
        </label>

        <input type="text" id="prop_name_box" name="query_prop_name">
      </div>

      <div>
        <label for="area_rent_box">
          Area rent
        </label>

        <input type="text" id="area_rent_box" name="query_area_rent">
      </div>

      <div>
        <label for="thumbnail_box">
          Thumbnail
        </label>

        <input type="text" id="thumbnail_box" name="query_thumbnail">
      </div>

      <div>
        <label for="size_sqft_box">
          Size sqft
        </label>

        <input type="text" id="size_sqft_box" name="query_size_sqft">
      </div>

      <div>
        <label for="size_from_sqft_box">
          Size from sqft
        </label>

        <input type="text" id="size_from_sqft_box" name="query_size_from_sqft">
      </div>

      <div>
        <label for="size_to_sqft_box">
          Size to sqft
        </label>

        <input type="text" id="size_to_sqft_box" name="query_size_to_sqft">
      </div>

      <div>
        <label for="meta_id_box">
          Meta
        </label>

        <input type="text" id="meta_id_box" name="query_meta_id">
      </div>

      <button>
        Create property
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Address1
        </th>

        <th>
          Address2
        </th>

        <th>
          Lat
        </th>

        <th>
          Location description
        </th>

        <th>
          Lon
        </th>

        <th>
          Meta status
        </th>

        <th>
          Postcode
        </th>

        <th>
          Prop name
        </th>

        <th>
          Area rent
        </th>

        <th>
          Thumbnail
        </th>

        <th>
          Size sqft
        </th>

        <th>
          Size from sqft
        </th>

        <th>
          Size to sqft
        </th>

        <th>
          Meta
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_properties.each do |a_property| %>
      <tr>
        <td>
          <%= a_property.id %>
        </td>

        <td>
          <%= a_property.address1 %>
        </td>

        <td>
          <%= a_property.address2 %>
        </td>

        <td>
          <%= a_property.lat %>
        </td>

        <td>
          <%= a_property.location_description %>
        </td>

        <td>
          <%= a_property.lon %>
        </td>

        <td>
          <%= a_property.meta_status %>
        </td>

        <td>
          <%= a_property.postcode %>
        </td>

        <td>
          <%= a_property.prop_name %>
        </td>

        <td>
          <%= a_property.area_rent %>
        </td>

        <td>
          <%= a_property.thumbnail %>
        </td>

        <td>
          <%= a_property.size_sqft %>
        </td>

        <td>
          <%= a_property.size_from_sqft %>
        </td>

        <td>
          <%= a_property.size_to_sqft %>
        </td>

        <td>
          <%= a_property.meta_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_property.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_property.updated_at) %> ago
        </td>

        <td>
          <a href="/properties/<%= a_property.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
