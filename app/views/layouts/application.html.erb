<!DOCTYPE html>
<html>
  <head>
    <title>FinalProject</title>
    <%= csrf_meta_tags %>

    <!-- Expand the number of characters we can use in the document beyond basic ASCII ðŸŽ‰ -->
    <meta charset="utf-8">

    <!-- Make it responsive to small screens -->
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"></script>

    <%= stylesheet_link_tag 'application', media: 'all' %>

  </head>

  <body>
    <ul>
      <% if @current_user == nil%>
        <li>
          <a href="/user_sign_up">Sign up</a>
        </li>
        <li>
          <a href="/user_sign_in">Sign in</a>
        </li>
      <% else %>
        <li>
          <a href="/"><%= @current_user.first_name %>'s Properties</a>
        </li>
        <li>
          <a href="/user_sign_out">Sign out</a>
        </li>


      <% end %>
        <li>
          <a href="/scores">Scores</a>
        </li>
      </ul>

      <p style="color: green"><%= notice %></p>
      <p style="color: red"><%= alert %></p>

    <%= yield %>
  </body>
</html>
